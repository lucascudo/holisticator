extends layout

block content
  h1= title
  p Welcome to #{title}
  table
    thead
      tr
        th(style='text-align:center') Verb HTTP
        th(style='text-align:center') Route
        th(style='text-align:center') Requires Authentication
        th(style='text-align:right') Params
    tbody
      tr
        td(style='text-align:center') GET
        td(style='text-align:center')
          a(href='/api/subject') /api/subject
        td(style='text-align:center') No
      tr
        td(style='text-align:center') GET
        td(style='text-align:center')
          a(href='/api/subject/:id') /api/subject/:id
        td(style='text-align:center') No
      tr
        td(style='text-align:center') GET
        td(style='text-align:center')
          a(href='/api/oauth/google') /api/oauth/google
        td(style='text-align:center') No
      tr
          td(style='text-align:center') GET
          td(style='text-align:center')
            a(href='/api/oauth/google/callback') /api/oauth/google/callback
          td(style='text-align:center') No
      tr
        td(style='text-align:center') GET
        td(style='text-align:center')
          a(href='/api/oauth/facebook') /api/oauth/facebook
        td(style='text-align:center') No
      tr
        td(style='text-align:center') GET
        td(style='text-align:center')
          a(href='/api/oauth/facebook/callback') /api/oauth/facebook/callback
        td(style='text-align:center') No
      tr
        td(style='text-align:center') POST
        td(style='text-align:center')
          a(href='/api/signup') /api/signup
        td(style='text-align:center') No
        td(style='text-align:right') { &quot;username&quot;: String, &quot;password&quot;: String }
      tr
        td(style='text-align:center') POST
        td(style='text-align:center')
          a(href='/api/signin') /api/signin
        td(style='text-align:center') No
        td(style='text-align:right') { &quot;username&quot;: String, &quot;password&quot;: String }
      tr
        td(style='text-align:center') POST
        td(style='text-align:center')
          a(href='/api/subject') /api/subject
        td(style='text-align:center') Yes
        td(style='text-align:right') { &quot;number&quot;: Integer, &quot;name&quot;: String }
      tr
        td(style='text-align:center') PUT
        td(style='text-align:center')
          a(href='/api/subject/:id') /api/subject/:id
        td(style='text-align:center') Yes
        td(style='text-align:right') { &quot;number&quot;: Integer, &quot;name&quot;: String }
      tr
        td(style='text-align:center') DELETE
        td(style='text-align:center')
          a(href='/api/subject/:id') /api/subject/:id
        td(style='text-align:center') Yes
      tr
        td(style='text-align:center') POST
        td(style='text-align:center')
          a(href='/api/subject/:id/image') /api/subject/:id/image
        td(style='text-align:center') Yes
        td(style='text-align:right')
          | multipart/form-data with an input of type
          em file
          |  and named as
          em image
